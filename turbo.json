{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "BLOB_READ_WRITE_TOKEN",
        "DATABASE_URI",
        "BETTER_AUTH_SECRET",
        "ALLOW_ADMIN_CREATION",
        "BETTER_AUTH_URL",
        "NEXT_PUBLIC_BETTER_AUTH_URL",
        "GOOGLE_OAUTH_CLIENT_ID",
        "GOOGLE_OAUTH_CLIENT_SECRET",
        "VERCEL_DEPLOY_HOOK_URL"
      ]
    },
    "build:packages": {
      "dependsOn": ["^build"],
      "inputs": ["packages/*"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "checkTs": {
      "dependsOn": ["^checkTs"]
    },
    "pretty": {
      "dependsOn": ["^pretty"],
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
