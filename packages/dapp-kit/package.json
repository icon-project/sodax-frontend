{
  "name": "@sodax/dapp-kit",
  "license": "MIT",
  "version": "0.0.1-rc.4",
  "description": "dapp-kit of New World",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "files": ["dist", "src"],
  "repository": {
    "type": "git",
    "url": "https://github.com/icon-project/sodax-frontend"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch ./src",
    "test": "tsc --noEmit",
    "prepublishOnly": "tsup",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo",
    "pretty": "biome format . --write",
    "checkTs": "tsc --noEmit",
    "knip": "knip",
    "lint": "biome lint . --write"
  },
  "dependencies": {
    "@sodax/sdk": "workspace:*",
    "@sodax/types": "workspace:*",
    "viem": "catalog:"
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "knip": "5.30.5",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@tanstack/react-query": "5.x",
    "react": ">=18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  }
}
