{
  "name": "@new-world/dapp-kit",
  "license": "MIT",
  "version": "1.0.0",
  "description": "DappKit of New World",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "files": ["dist", "src"],
  "repository": {
    "type": "git",
    "url": "https://github.com/icon-project/sodax-frontend"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "tsup --run",
    "prepublishOnly": "tsup",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo",
    "pretty": "biome format . --write",
    "checkTs": "tsc --noEmit",
    "knip": "knip",
    "lint": "biome lint . --write"
  },
  "dependencies": {
    "@new-world/sdk": "workspace:*",
    "@new-world/xwagmi": "workspace:*",
    "react": "catalog:",
    "viem": "catalog:"
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "knip": "5.30.5",
    "tsup": "^8.4.0",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": ">=19"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  }
}
